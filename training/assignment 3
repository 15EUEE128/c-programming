//find the differnce between two timing
#include<stdio.h>
int main()
{
	int a,b,c,d,e,f,g,h,i;
	scanf("%d:%d",&a,&b);
	c=a*60+b;
	scanf("%d:%d",&d,&e);
	f=d*60+e;
	if(c<f)
	{
		g=f-c;
		h=g/60;
		i=g%60;
		printf("\nThe time difference in minutes:%d",g);
		printf("\nThe time difference in hours:%d:%d",h,i);
	}
	else
	{
		g=c-f;
		h=g/60;
		i=g%60;
		printf("\nThe time difference in minutes:%d",g);
		printf("\nThe time difference in hours:%d:%d",h,i);
	}
}
